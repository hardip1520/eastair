<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
  
<!--content for the Add page-->
<div class = "container-l">
    <div class = "row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>
        <form class = "form" method="POST">
                <div class ="form group">
                    <label for="dateTextField">Date</label>
                    <input type="date" class="form control"
                    id="dateTextField"
                    placeholder="Enter Date"
                    name="date" required>
                </div>

                <div class ="form group">
                    <label for="flight_numberTextField">Flight Number</label>
                    <input type="number" class="form control"
                    id="flight_numberTextField"
                    placeholder="Enter the Flight Number"
                    name="flight" required>
                </div>

                <div class ="form group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form control"
                    id="descriptionTextField"
                    placeholder="Enter incident description"
                    name="description" required>
                </div>

                <div class ="form group">
                    <label for="severityTextArea">Severity</label>
                    <select name="severity" id="class">
                        <option value="low">Low</option>
                        <option value="medium">Medium</option>
                        <option value="high">High</option>
                        <option value="critical">Critical</option>
                      </select>
                </div>

                <div class ="form group">
                    <label for="statusTextField">Status</label>
                    <input type="text" class="form control"
                    id="statusTextField"
                    placeholder="Enter the status"
                    name="status" required>
                </div>
                <button class = "btn btn-primary" type="submit"><i class = "fas fa-edit"></i>submit</button>
                <a href="/airlineList" class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a> 
            
        </form>
        </div>
        </div>
    </div>


  
   <%-include ../partials/bottom_nav.ejs%>
<%-include ../partials/footer.ejs%>   

